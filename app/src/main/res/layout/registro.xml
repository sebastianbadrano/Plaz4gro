<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    tools:context=".Registro"
    tools:visibility="visible">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="NotSibling">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Superior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/registrobtn"
                android:layout_width="327dp"
                android:layout_height="37dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/buttonfield"
                android:text="@string/btn_registrarse"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnTomarFoto" />


        <EditText
            android:id="@+id/registUsuario"
            android:layout_width="328dp"
            android:layout_height="46dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/inputfield"
            android:ems="10"
            android:hint="Usuario"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />

            <Button
                android:id="@+id/btnTomarFoto"
                android:layout_width="328dp"
                android:layout_height="37dp"
                android:layout_marginTop="26dp"
                android:background="@drawable/buttonfield"
                android:text="@string/btn_tomarFoto"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registDireccion" />


            <EditText
                android:id="@+id/registCorreo"
                android:layout_width="328dp"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/inputfield"
                android:ems="10"
                android:hint="Correo"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.518"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/registUsuario" />

            <EditText
                android:id="@+id/registContrasena"
                android:layout_width="328dp"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/inputfield"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textVisiblePassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.518"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registCorreo" />

            <EditText
                android:id="@+id/registCelular"
                android:layout_width="328dp"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/inputfield"
                android:ems="10"
                android:hint="Celular"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.518"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registConfContr" />

            <EditText
                android:id="@+id/registDireccion"
                android:layout_width="328dp"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/inputfield"
                android:ems="10"
                android:hint="Dirección"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.518"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registCelular" />

            <EditText
                android:id="@+id/registConfContr"
                android:layout_width="328dp"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/inputfield"
                android:ems="10"
                android:hint="Confirmar contraseña"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.518"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registContrasena" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_logo" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>