<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    tools:context=".OpcionesPago">

    <LinearLayout
        android:id="@+id/superiorBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorOrange"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="@string/payment_list_title"
            android:textColor="@color/colorWhite"
            android:textSize="23sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollOptions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/superiorBar"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/opciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/colorBG"
            android:orientation="vertical">

            <Button
                android:id="@+id/pseButton"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/buttonfield"
                android:text="@string/payment_option1"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cashButton"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/buttonfield"
                android:drawableEnd="@drawable/ic_arrow"
                android:drawableRight="@drawable/ic_arrow"
                android:text="@string/payment_option2"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/cashOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/cashOpt1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_secfield"
                    android:gravity="start|center_vertical"
                    android:paddingStart="24dp"
                    android:paddingLeft="24dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:text="@string/cash_option1"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/cashOpt2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_secfield"
                    android:gravity="start|center_vertical"
                    android:paddingStart="24dp"
                    android:paddingLeft="24dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:text="@string/cash_option2"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/cashOpt3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_secfield"
                    android:gravity="start|center_vertical"
                    android:paddingStart="24dp"
                    android:paddingLeft="24dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:text="@string/cash_option3"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />

            </LinearLayout>

            <Button
                android:id="@+id/debitButton"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/buttonfield"
                android:drawableEnd="@drawable/ic_arrow"
                android:drawableRight="@drawable/ic_arrow"
                android:text="@string/payment_option3"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/debitOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/debitOpt1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_secfield"
                    android:gravity="start|center_vertical"
                    android:paddingStart="24dp"
                    android:paddingLeft="24dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:text="@string/debit_option1"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/debitOpt2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_secfield"
                    android:gravity="start|center_vertical"
                    android:paddingStart="24dp"
                    android:paddingLeft="24dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:text="@string/debit_option2"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/debitOpt3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_secfield"
                    android:gravity="start|center_vertical"
                    android:paddingStart="24dp"
                    android:paddingLeft="24dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:text="@string/debit_option3"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />

            </LinearLayout>

            <Button
                android:id="@+id/creditButton"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/buttonfield"
                android:drawableEnd="@drawable/ic_arrow"
                android:drawableRight="@drawable/ic_arrow"
                android:text="@string/payment_option4"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/creditOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/creditOpt1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_secfield"
                    android:gravity="start|center_vertical"
                    android:paddingStart="24dp"
                    android:paddingLeft="24dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:text="@string/credit_option1"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/creditOpt2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_secfield"
                    android:gravity="start|center_vertical"
                    android:paddingStart="24dp"
                    android:paddingLeft="24dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:text="@string/credit_option2"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/creditOpt3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_secfield"
                    android:gravity="start|center_vertical"
                    android:paddingStart="24dp"
                    android:paddingLeft="24dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:text="@string/credit_option3"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/creditOpt4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_secfield"
                    android:gravity="start|center_vertical"
                    android:paddingStart="24dp"
                    android:paddingLeft="24dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:text="@string/credit_option4"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/creditOpt5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_secfield"
                    android:gravity="start|center_vertical"
                    android:paddingStart="24dp"
                    android:paddingLeft="24dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:text="@string/credit_option5"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>